<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.gesture.GestureOverlayView
        android:id="@+id/gesture_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/straight_animation"
        android:gestureColor="@color/gestureStrokeColor"
        android:gestureStrokeType="multiple"
        android:uncertainGestureColor="@color/uncertainGestureStrokeColor">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/grobold"
            android:text="@string/DefaultScoreText"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/ds_digi"
            android:text="@string/timer"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/road_trip_pause_btn" />

        <ImageView
            android:id="@+id/trafficLight"
            android:layout_width="250dp"
            android:layout_height="285dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/stop" />

    </android.gesture.GestureOverlayView>

</LinearLayout>