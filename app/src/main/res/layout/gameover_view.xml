<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:contentDescription="@null"
        android:foregroundGravity="center_vertical"
        android:paddingStart="1dp"
        android:paddingEnd="35dp"
        app:srcCompat="@drawable/road_trip_game_over" />

    <ImageButton
        android:id="@+id/retryGameOverButton"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/road_trip_retry_btn_game_over" />

    <ImageButton
        android:id="@+id/quitGameOverButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="195dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/road_trip_quit_btn_game_over" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/grobold"
        android:text="@string/DefaultScoreText"
        android:textColor="#000000"
        android:textSize="70sp" />


</RelativeLayout>