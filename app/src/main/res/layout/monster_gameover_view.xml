<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:contentDescription="@null"
        android:foregroundGravity="center_vertical"
        app:srcCompat="@drawable/monster_game_over_monster" />

    <ImageButton
        android:id="@+id/retryGameOverButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="265dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/monster_retry" />

    <ImageButton
        android:id="@+id/quitGameOverButton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="265dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/monster_quitbtn" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="185dp"
        android:fontFamily="@font/grobold"
        android:text="@string/DefaultScoreText"
        android:textColor="#000000"
        android:textSize="70sp" />


</RelativeLayout>